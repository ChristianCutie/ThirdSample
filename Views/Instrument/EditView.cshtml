@model ThirdSample.Models.ViewModel.InstrumentViewModel
<div class="content-wrapper">
  <div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Edit Instrument</h4>
          <p class="card-description"></p>
          <form method="post" enctype="multipart/form-data" class="forms-sample">
            <input type="text" hidden asp-for="Instrument.Id">
            <input type="text" hidden asp-for="Instrument.imgpath">
            <div class="form-group">
              <div class="form-group">
                <label for="exampleInputUsername1">Type</label>
                <select class="form-control" asp-for="Instrument.typeid"
                  asp-items="Model.selectListType(Model.Types)"></select>
              </div>
              <div class="form-group">
                <label for="exampleInputUsername1">Item</label>
                <select class="form-control" asp-for="Instrument.itemid"
                  asp-items="Model.selectListItems(Model.Items)"></select>
              </div>
              <div class="form-group">
                <label asp-for="Instrument.price"></label>
                <input asp-for="Instrument.price" type="text" class="form-control" placeholder="Add Item here...">
              </div>
              <div class="form-group">
                <label asp-for="Instrument.imgpath"></label>
                <input asp-for="Instrument.imgpath" type="file" name="files" class="form-control"
                  placeholder="Add Item here...">
              </div>
              <input type="submit" class="btn btn-primary" value="Submit">
              <a asp-action="InstrumentView" class="btn btn-dark">Back</a>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>